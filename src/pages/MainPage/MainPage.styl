.container
  color #DBE4ED
  display flex
  flex-direction column
  gap 16px
  align-items center
  justify-content center
  margin 0 auto
  vertical-align middle
  background: rgba(63,81,181,0.3)
  padding 24px
  border-radius 10px
  max-width 1190px
  box-shadow: 0px 8px 16px rgba(16, 0, 37, 0.15);
  height calc(100vh - 220px)
.title
  margin 0
  font-size 32px
.actions
  display flex
  justify-content space-between
  gap 24px
  align-items center