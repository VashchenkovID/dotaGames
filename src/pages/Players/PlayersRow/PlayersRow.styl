.container
  padding 20px
  display grid
  grid-template-columns 1fr 0.8fr repeat(2,1fr)
  gap 16px
  align-items center
  cursor pointer
.container:hover
  background: rgba(63,81,181,0.3)

.nameCell
  display flex
  align-items center
  gap 8px

.img {
  width 60px
}

.name {
  color #BBDD00
  font-size 18px
}

.team:hover {
  color #BBDD00
}