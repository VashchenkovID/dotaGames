h1,h2 {
  margin 0
}
.container
  padding 20px
  background rgba(16, 0, 37, 0.4)
  border-radius 10px
  border 1px solid rgba(16, 0, 37, 0.5)
  display flex
  flex-direction column
  gap 4px
  width calc(100vw - 944px)
  @media (max-width 1200px)
    width auto


.title
  font-weight: 700;
  font-size: 22px;
  text-transform: uppercase;
  background: linear-gradient(268.55deg, #3f51b5 0%, #d9ddff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  text-shadow: 0px 8px 16px rgba(16, 0, 37, 0.15);

.subTitle
  font-weight: 700;
  font-size: 18px;
  text-transform: uppercase;
  background: linear-gradient(268.55deg, #3f51b5 0%, #d9ddff 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-fill-color: transparent;
  text-shadow: 0px 8px 16px rgba(16, 0, 37, 0.15);
.itemRow
  display flex
  gap 8px
  flex-wrap wrap
