.loader {
  position absolute
  height 100vh
  width 100%
  left 0
  top 0
  background black
  opacity 0.9
  display flex
  justify-content center
  align-items center
}

.container
  color #DBE4ED
  margin 0 auto
  max-width 1160px
  background: rgba(63,81,181,0.3)
  padding 24px
  border-radius 10px
  box-shadow: 0px 8px 16px rgba(16, 0, 37, 0.15);
  height calc(100vh - 150px)
  margin-top 24px

.button
  display flex
  justify-content center
  margin-top 24px
  border-top 1px solid #DBE4ED
  padding 24px

