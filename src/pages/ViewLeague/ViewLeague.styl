.container
  color #DBE4ED
  margin 24px
  background: rgba(63,81,181,0.3)
  padding 24px
  border-radius 10px
  box-shadow: 0px 8px 16px rgba(16, 0, 37, 0.15);
  height calc(100vh - 150px)
  display flex
  flex-direction column
  gap 16px
  &__body
    display grid
    grid-template-columns 1fr 1fr
    gap 24px
.tier
  font-size 22px
  &__title
    color #BBDD00
    text-transform uppercase